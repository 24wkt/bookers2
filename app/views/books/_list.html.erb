<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
<table>
  <tr></tr>
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
      <th>introduction</th>
      <th><%= user.introduction %></th>
  </tr>
</table>


<h2>New book</h2>
<%= form_with model: book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %><br />

  <%= f.submit 'Create Book' %>
<% end %>
