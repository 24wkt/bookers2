<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<%= render 'books/list', user: @user, book: @book %>

<h2>Book detail</h2>
<table>
  <tbody>

    <tr>
      <td><%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
      <td><%= link_to @book.user.name, user_path(@book.user.id) %></td>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      <% end %>
    </tr>
  </tbody>
</table>