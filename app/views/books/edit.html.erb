<h1>Editing Book</h1>
<%= form_with model: @book, local: true do |f| %>
  <div>
    <label for="book_title">Title</label><br />
      <%= f.text_field :title %>
  </div>

  <div>
    <label for="book_body">opinion</label><br />
      <%= f.text_area :body %>
  </div><br />

  <div>
    <%= f.submit 'Update Book' %>
  </div>

  <%= link_to "show", book_path(@book.id) %>
  |
  <%= link_to "Back", books_path %>
<% end %>
