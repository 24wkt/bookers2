<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navibar-brannd text-light" href="/" %>
            <span>Bookers2</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="qaz navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li>
                  <%= link_to "Home", user_path(current_user.id), class: "fas fa-home text-light" %>
                </li>
                <li>
                  <%= link_to "Users", users_path, class: "fas fa-users text-light" %>
                </li>
                <li>
                  <%= link_to "Books", books_path, class: "fas fa-book-open text-light" %>
                </li>
                <li>
                  <%= link_to "logout", destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt text-light" %>
                </li>
              <% else %>
                <li>
                  <%= link_to "Home", root_path, class: "fas fa-home nav-link text-light" %>
                </li>
                <li>
                  <%= link_to "About", homes_about_path, class: "fas fa-link text-light" %>
                </li>
                <li>
                  <%= link_to "sign up", new_user_registration_path, class: "fas fa-user-plus text-light" %>
                </li>
                <li>
                  <%= link_to "login",new_user_session_path, class: "fas fa-sign-in-alt text-light" %>
                </li>
                <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <div class="container px-5 px-sm-0">
      <%= render 'layouts/notifications' %>
    </div>



    <%= yield %>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</P>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
