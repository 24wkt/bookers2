<h1>Users</h1>
<table>
  <thead>
    <th>image</th>
    <th>name</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= attachment_image_tag user.id, :profile_image,  :fill, 60, 60, fallback: "no_image_jpg" %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

