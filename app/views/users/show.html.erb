<% if flash[:notice] %>
  <p id="notice"><%= flash[:notice] %></p>
<% end %>

<%= render 'books/list', user: @user, book: @book %>


<h2>Books</h2>
<table>
  <thead>
    <th>Image</th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
      <tr>
        <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %></td>
        <% @books.each do |book| %>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        <% end %>
      </tr>
  </tbody>
</table>